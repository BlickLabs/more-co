{% extends "partials/base.njk" %}

{% block title %}Websites{% endblock %}

{% set meta_description = "The first impression is what matters the most. We make your Website." %}
{% set og_url = "https://getmore.mx/en/websites.html" %}
{% set og_title = "Websites | Get More" %}
{% set og_description = "The first impression is what matters the most. We make your Website." %}
{% set og_img = "/img/seo/pagina-web-seo.jpg" %}
{% set og_img_width = "500" %}
{% set og_img_height = "300" %}

{% set view_name = "webpages" %}
{% set lang_view = "english" %}

{% block content %}
<section class="service">
  <section class="service-cover">
    <h1 class="service-cover-title metropolis-bold">{{en.webpages.cover.title}}</h1>
    <div class="service-cover-content">
      <div class="service-cover-content-info">
        <h2 class="service-cover-subtitle metropolis-bold">{{en.webpages.cover.subtitle}}</h2>
        <span class="service-cover-desc metropolis-regular" id="webpages-cover-desc">{{en.webpages.cover.desc}}</span>
        <a class="btn metropolis-bold" href="{{en.webpages.cover.quoteBtnLink}}">{{en.webpages.cover.quoteBtn}}</a>
      </div>
      <picture>
        <source media="(max-width: 1000px)" srcset="{{en.webpages.cover.laptopSiteMobile}}">
        <img class="service-cover-img" src="{{en.webpages.cover.laptopSite}}" alt="{{en.webpages.cover.laptopSiteAlt}}">
      </picture>
    </div>
  </section>

  <section class="service-packages">
    <h2 class="service-packages-title metropolis-bold">{{en.webpages.packages.title}}</h2>
    <span class="service-packages-slice metropolis-bold">{{en.webpages.packages.sliceTable}}<img class="service-packages-slice-icon" src="{{en.webpages.packages.sliceTableIcon}}" alt="{{en.webpages.packages.sliceTableIconAlt}}"></span>

    {% include 'partials/webpagesPackagesEnglish.njk' %}

    <div class="service-card">
      <div class="service-card-content">
        <h3 class="service-card-title metropolis-bold">{{en.webpages.packages.subtitle}}</h3>
        <a class="btn transparent metropolis-bold" href="{{en.webpages.packages.quoteBtnLink}}">{{en.webpages.packages.quoteBtn}}</a>
      </div>
    </div>
  </section>

  <section class="service-projects">
    <div class="service-projects-info">
      <h2 class="service-projects-title metropolis-bold">{{en.webpages.projects.title}}</h2>
      <div class="service-projects-img-container">
        {% for card in en.webpages.projects.cards %}
        <a class="service-projects-img-content" href="{{card.link}}">
          <img class="service-projects-img" src="{{card.img}}" alt="{{card.imgAlt}}">
          <span class="service-projects-label metropolis-bold">{{card.title}}</span>
        </a>
        {% endfor %}
      </div>
      <div class="service-projects-img-carousel owl-carousel">
        {% for card in en.webpages.projects.cards %}
        <a class="service-projects-img-content" href="{{card.link}}">
          <img class="service-projects-img" src="{{card.img}}" alt="{{card.imgAlt}}">
          <span class="service-projects-label metropolis-bold">{{card.title}}</span>
        </a>
        {% endfor %}
      </div>
    </div>
    <div class="service-projects-banner">
      <h3 class="service-projects-subtitle metropolis-bold">{{en.webpages.projects.banner.subtitle}}</h3>
      <div class="service-projects-btns">
        <a class="btn borderBlack metropolis-bold" id="same-btn-width" href="{{en.webpages.projects.banner.contactBtnLink}}">{{en.webpages.projects.banner.contactBtn}}</a>
        <a class="btn metropolis-bold" href="{{en.webpages.projects.banner.quoteBtnLink}}">{{en.webpages.projects.banner.quoteBtn}}</a>
      </div>
    </div>
  </section>
</section>
{% endblock %}
