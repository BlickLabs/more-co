<nav class="nav">
  <div class="nav-logo-container">
    <a href="/en/index.html">
      <img class="nav-logo" src="{{en.nav.logo}}" alt="{{en.nav.logoAlt}}">
      <img class="nav-logo-scroll" src="{{en.nav.logoScroll}}" alt="{{en.nav.logoAlt}}">
    </a>
  </div>
  <div class="nav-option-container">
    <div class="nav-option-content">
      <a href="/en/index.html">
        <span class="nav-option metropolis-medium {% if view_name == 'homepage' %}active{% endif %}">home</span>
      </a>
    </div>
    <div class="nav-option-content">
      <a href="/en/our-work.html">
        <span class="nav-option metropolis-medium {% if view_name == 'portfolio' %}active{% endif %}">our work</span>
      </a>
    </div>
    <div class="nav-option-content dropdown">
    <button class="nav-option dropdown-btn metropolis-medium {% if view_name == 'ecommerce' or view_name == 'webpages' or view_name == 'pointsale' %}active{% endif %}">our services</button>
      <div id="navDropdown" class="dropdown-content">
        <a href="/en/online-stores.html">
          <span class="nav-option metropolis-medium {% if view_name == 'ecommerce' %}active{% endif %}">online stores</span>
        </a>
        <a href="/en/websites.html">
          <span class="nav-option metropolis-medium {% if view_name == 'webpages' %}active{% endif %}">websites</span>
        </a>
        <a href="/en/point-of-sale.html">
          <span class="nav-option metropolis-medium {% if view_name == 'pointsale' %}active{% endif %}">point of sale</span>
        </a>
      </div>
    </div>
    <div class="nav-option-content">
      <a href="/en/about-us.html">
        <span class="nav-option metropolis-medium {% if view_name == 'aboutus' %}active{% endif %}">about us</span>
      </a>
    </div>
    <div class="nav-option-content">
      <a href="/en/contact-us.html">
        <span class="nav-option metropolis-medium special-btn {% if view_name == 'contact' %}active{% endif %}">contact us</span>
      </a>
    </div>

    {% include 'partials/navLang.njk' %}
  </div>

  <div class="nav-lang-mobile">
    {% include 'partials/navLang.njk' %}
  </div>

  <div data-attribute="" class="hamburger-visibility"  id="hamburgerMenu">
    <div class="nav-hamburguer" data-attribute="">
      <div class="hamburger-line-icon-container" data-attribute="">
        <div class="hamburger-line-icon" data-attribute=""></div>
        <div class="hamburger-line-icon" data-attribute=""></div>
        <div class="hamburger-line-icon" data-attribute=""></div>
      </div>
    </div>
  </div>
  <div class="hamburger-menu-container" id="menuContainer" data-attribute="">
    <div class="hamburger-menu-header" data-attribute="">
      <div class="hamburger-close-container" id="hideHamburger">
        <img class="hamburger-close" src="{{en.nav.hamburgerClose}}" alt="{{en.nav.hamburgerCloseAlt}}">
      </div>
    </div>
    <div class="hamburger-menu-body" data-attribute="">
      {% for section in en.nav.sections %}
      <div class="nav-option-content {% if view_name == section.viewName %}active{% endif %}">
        <a href="{{section.link}}">
          <span class="nav-option metropolis-medium {% if section.name == 'contact us' %}special-btn{% endif %}">{{section.name}}</span>
        </a>
      </div>
      {% endfor %}
    </div>
  </div>
</nav>
