.dropbtn:hover, .dropbtn:focus
  background-color #2980B9

.dropdown
  align-items center
  position relative
  display flex
  padding-top 4px

  & .nav-option
    background-color transparent
    border none
    cursor pointer
    padding 0

.dropdown-content
  display none
  position absolute
  background-color $grayT3 //rgba(49,49,49,1)
  box-shadow 0px 8px 16px 0px rgba(0,0,0,0.2)
  z-index 1
  top 100%
  min-width 190px

.dropdown-content a
  color black
  padding 12px 16px
  text-decoration none
  display block

.dropdown a:hover
  background-color #ddd

.show
  display block

@media screen and (max-width: 840px)
  .nav
    justify-content space-between
    height 70px
    padding 0 18px

    &-logo
      &-container
        width 100%

    &-option
      color $whiteT1
      font-size 14px
      letter-spacing 2.5px

      &-container
        display none

      &-content
        height 49px
        margin-left 0
        padding-left 30px

        &.active
          background-color #000000

        & > a
          align-items center
          display flex
          height 100%
          width 100%

        &:last-child
          margin-top 13px

      &.special-btn
        background-color $blueT1
        border solid 1px $blueT1
        color $whiteT1
        height 34px
        margin-left -13px
        width 140px

        &:hover
          background-color $blueT5
          border solid 1px $blueT5

    &-scroll
      & .hamburger-line-icon
        background-color $whiteT1

    &-lang
      &-container
        margin-left 0

      &-mobile
        display block
        margin-right 40px

  .hamburger
    background-color transparent
    display flex
    height 33px
    justify-content center
    width 33px

    &-visibility
      cursor pointer
      position initial

    &-logo
      height 18px
      width 103px

      &-container
        height 25px

    &-close
      cursor pointer
      height 16px
      width 16px

      &-container
        height 16px

    &-menu
      &-container
        background-color rgba(38, 38, 38, 1)
        display inline
        bottom 0
        overflow scroll
        position fixed
        right 0
        top 0
        transition width 0.5s
        width 0%
        z-index 13
        -webkit-transition width 0.5s

      &-header
        align-items center
        display flex
        flex-direction row
        justify-content flex-end
        padding 22px 30px 50px 30px

    &-text
      color white
      padding 10px 0

      &-container
        margin 35px 0

    &-active,
    &-text:hover
      font-weight bold
      text-decoration underline

    &-line
      &-icon
        background-color $blackT2
        height 3px
        width 22px

        &-container
          display flex
          flex-direction column
          justify-content center

        &:nth-child(2)
          margin 4px 0
