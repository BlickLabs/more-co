.nav
  align-items center
  background-color transparent
  display flex
  height 80px
  justify-content space-between
  left 0
  padding 0 40px
  position fixed
  top 0
  transition 0.2s
  width 100%
  z-index 12

  &-logo
    height 22px
    width 125.88px

    &-scroll
      display none
      height 18px
      width 103px

  &-scroll
    align-items center
    background-color rgba(49, 49, 49, 0.9)
    height 55px
    transition 0.2s

    & .nav-logo
      display none

    & .nav-logo-scroll
      display block

    & .nav-option
      color $whiteT1

      &:hover,
      &.active
        color $whiteT1
        font-weight $bold

    & .special-btn
      border solid 1px $whiteT1
      color $whiteT1

  &-option
    color $blackT1
    font-size 12px
    letter-spacing 2px
    text-transform uppercase

    &:hover,
    &.active
      color $blueT1
      font-weight $semibold

    &-container
      display flex
      flex-direction row

    &-content
      align-items center
      display flex
      margin-left 20px
      position relative

  &-lang
    color $grayT3
    display block
    font-size 12px
    letter-spacing 1.7px
    height 11px

    &-mobile
      display none

    &-container
      align-items center
      border-radius 16px
      background-color $whiteT1
      display flex
      flex-direction row
      height 26px
      margin-left 20px
      width 67px

    &-content
      margin 0 13px

      & a
        padding 5px

    &-active
      align-items center
      border-radius 100px
      background-color $blueT1
      color #ffffff
      display flex
      height 27px
      justify-content center
      margin 0
      min-width 27px
      text-indent 2px

      & a span
        color $whiteT1

.special-btn
  align-items center
  border solid 1px $blackT2
  color $blackT2
  display flex
  font-size 12px
  height 29px
  justify-content center
  letter-spacing 2px
  padding-top 2px
  transition 0.3s
  width 140px

  &:hover,
  &.active
    background-color $blueT1
    border solid 1px $blueT1
    color $whiteT1
    transition 0.3s

.hamburger
  &-visibility
    position absolute

  &-menu
    &-container
      display none

