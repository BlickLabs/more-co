.footer
  background-color $whiteT1
  bottom 0
  display flex
  flex-direction column
  height 430px
  justify-content space-between
  padding 15px 92px 40px 0
  position relative
  width 100%

  &-background
    background-image url("/img/utils/example-akai-in-laptop.png")
    background-position center
    background-repeat no-repeat
    background-size contain
    bottom 170px
    height 425px
    left 0
    position absolute
    width 439px
    z-index 1

  &-content
    margin 0 0 0 auto

    & .borderBlack
      height 29px
      margin-top 16px

      &.active
        background-color $blueT1
        border solid 1px $blueT1
        color $whiteT1

  &-logo
    height 18px
    width 103px

  &-section
    color $blackT2
    font-size 10px
    letter-spacing 2.2px
    line-height 22px
    margin-right 15px
    text-transform uppercase

    &:hover,
    &.active
      color $blueT1

    &-container
      align-items center
      display flex
      flex-direction row
      flex-wrap wrap
      margin-top 16px
      width 340px

  &-email
    color $blackT2
    display block
    font-size 14px
    margin-top 15px

  &-copyrigth
    color $blackT2
    font-size 12px
    letter-spacing 0.8px
    text-align center

  &-decorator
    bottom 0
    height 132px
    position absolute
    right 60px

  &-social
    &-container
      margin-top 20px

      & a:nth-child(1) .footer-social-icon
        margin-right 22px

    &-icon
      height 15px
      width auto

@media screen and (max-width 940px)
  .footer
    &-background
      bottom 90px
      height 334px
      width 375px

    &-decorator
      right 30px

@media screen and (max-width 650px)
  .footer
    height 650px
    justify-content flex-start
    padding 44px 0 44px 0

    &-background
      bottom 70px

    &-content
      align-items center
      display flex
      flex-direction column
      margin 0 auto 19px auto

    &-section
      margin 0 7px

      &-container
        justify-content center
        margin-top 35px

      &.borderBlack
        margin-top 25px

    &-decorator
      display none

    &-email
      margin 20px 0 12px 0

    &-decorator
      display none

    &-copyrigth
      bottom 24px
      left 0
      position absolute
      right 0

@media screen and (max-width 460px)
  .footer
    &-background
      bottom 50px
      height 300px
      width 335px

    &-section
      &-container
        width 260px
