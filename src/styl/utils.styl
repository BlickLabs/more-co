.btn
  align-items center
  background-color $blueT1
  border none
  color $whiteT1
  display flex
  font-size 9px
  height 37px
  letter-spacing 2.1px
  padding 0 13px
  text-indent 2.1px
  text-transform uppercase
  width fit-content

  &.tofooter
    background-color $whiteT1
    border solid 1px $blackT2
    color $blackT2
    height 29px

  &.transparent
    background-color transparent
    border solid 1px $whiteT1
    color $whiteT1

  &.white
    background-color $whiteT1
    border solid 1px $blueT1
    color $blueT1

.section-tag
  align-items center
  border-radius 16px
  color $whiteT1
  display flex
  flex-direction row
  font-size 10px
  height 20px
  justify-content center
  letter-spacing 0.5px
  position absolute
  width 120px

  & img
    height 8px
    margin-left 5px
    width 8.5px

.vertical-text
  color $blackT2
  font-size 9px
  letter-spacing 2.2px
  position absolute
  text-transform uppercase
  transform rotate(90deg)

  &:after
    background-color $blackT2
    content ""
    display inline-block
    height 1px
    margin-left 10px
    vertical-align middle
    width 20px
