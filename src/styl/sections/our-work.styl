    position relative

    &-img
      height 252px
      width 381px

    &-title
      bottom 27px
      color $whiteT1
      font-size 32px
      left 23px
      letter-spacing -0.4px
      position absolute

    &-layer
      align-items center
      background-size cover
      bottom 0
      display flex
      flex-direction column
      justify-content center
      left 0
      opacity 0
      position absolute
      right 0
      top 0
      transition 0.3s

      &:hover
        opacity 1
        transition 0.3s
        z-index 2


