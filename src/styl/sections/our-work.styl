.ourwork
  margin 55px 0
  padding-bottom 200px
  position relative

  &:before
    background-color $grayT1
    bottom 0
    content ""
    left 0
    position absolute
    right 0
    top 880px
    z-index -1

  &-header
    margin-top 44px

  &-title
    color $blackT2
    font-size 33px
    letter-spacing 0.5
    text-align center

    &:before
      background-color $blueT4
      content ""
      display block
      height 3px
      margin 0 auto 30px auto
      width 41px

  &-tab
    display flex
    width 285.75px

    &-container
      display flex
      flex-direction row
      list-style none
      margin 60px auto 35px auto
      padding 0
      width 1143px

    &-link
      border-bottom solid 1px $grayT5
      width 100%

      &.selected
        border-bottom solid 1px $blackT2

      & > h2
        color $blackT2
        font-size 11px
        letter-spacing 0.5px
        padding 10px 15px 24px 15px
        text-align center
        text-transform uppercase

    &-content
      display flex
      flex-wrap wrap
      margin 0 auto
      width 1143px

  &-project
