img:not([src])
  visibility hidden

.fixed-tab
  background-color $whiteT1
  left 0
  margin-top 0
  padding-top 18px
  position fixed
  right 0
  top 55px
  z-index 4

  & .ourwork-tab-link.active
    border-bottom solid 1px $blackT2

@media screen and (max-width 1220px)
  .ourwork
    &-tab
      width 191px

      &-container
        width 762px

      &-content
        width 762px

@media screen and (max-width 820px)
  .ourwork
    padding-bottom 60px

    &-tab
      &-container
        width 381px

        &.fixed-tab
          margin-top 15px

      &-content
        width 381px

      & > a
        font-size 10px
        padding-bottom 19px

      &-carousel
        & .owl-prev,
        & .owl-next
          background-color $whiteT1 !important
          bottom 15px
          height 26px
          position absolute

        & .owl-prev
          left 0

        & .owl-next
          right 0

        & .owl-prev.disabled,
        & .owl-next.disabled
          display none

        & .carousel-arrow
          height 26px
          width 26px

@media screen and (max-width 650px)
  .ourwork
    padding-bottom 10px

@media screen and (max-width 420px)
  .ourwork
    margin-bottom 5px
    padding-bottom 46px

    &-header
      margin-top 50px

    &-title
      &:before
        height 2px
        margin-bottom 20px

    &-tab
      width 50%

      &-container
        flex-wrap wrap
        margin 35px auto 0 auto
        width 100%

      &-link
        padding 15px 0 !important

        & > h2
          padding 0

      &-content
        width 100%

      & > a > h2
        &:hover
          font-weight 700

    &-project
      height auto
      width 100%

      &-img
        height 100%
        width 100%

      &-btn
        &-container
          justify-content center
          margin-top 46px

  .fixed-tab
    padding-top 0
