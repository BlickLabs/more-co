.templateb
  &-cover
    background-position center
    background-repeat no-repeat
    background-size cover
    height 431px

    &-content
      margin 0 auto
      padding 40px 0 0 0
      width 68.7%

    &-title
      color $whiteT1
      font-size 11px
      letter-spacing 2.5px
      line-height 20px
      margin 9px 0
      text-transform uppercase

    &-paragraph
      color $whiteT1
      font-size 13px
      letter-spacing 0.8px
      line-height 18px
      margin-bottom 15px
      width 345px

  .return
    color $whiteT1
    font-size 11px
    letter-spacing 1px
    text-transform uppercase

    &-container
      padding 30px 0 0 40px

    & .semi-triangle
      height 8px
      margin-right 15px
      width 5px

  &-data
    margin-bottom 100px

    &-container
      align-items flex-end
      display flex
      flex-direction row
      justify-content space-between
      margin 0 auto 0 auto
      width 68.7%

    &-img
      display block
      margin -133px auto 0 auto
      width 93%

    &-title
      color $blackT3
      font-size 13px
      letter-spacing 0.7px
      margin-bottom 15px

    &-desc
      color $blackT3
      font-size 11px
      letter-spacing 0.7px
      line-height 20px
      margin-top 12px
      width 366px

    &-ul
      list-style none
      margin 0
      padding 0

      & > .templateb-data-desc
        margin-top 0

    &-btns
      display flex
      flex-direction row

      & > a:first-child
        margin-right 15px

  /*VRE project*/

  &.vre
    .templateb-cover
      background-image url("/img/projects/vre-cover.jpg")

    .templateb-logo
      height 38px
      width 34px
