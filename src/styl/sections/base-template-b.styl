.templateb
  &-cover
    background-position center
    background-repeat no-repeat
    background-size cover
    height 431px

    &-content
      margin 0 auto
      padding 40px 0 0 0
      width 68.7%

    &-title
      color $whiteT1
      font-size 11px
      letter-spacing 2.5px
      line-height 20px
      margin 9px 0
      text-transform uppercase

    &-paragraph
      color $whiteT1
      font-size 13px
      letter-spacing 0.8px
      line-height 18px
      margin-bottom 15px
      width 345px

  .return
    color $whiteT1
    font-size 11px
    letter-spacing 1px
    text-transform uppercase

    &-container
      padding 30px 0 0 40px

    & .semi-triangle
      height 8px
      margin-right 15px
      width 5px

  &-data
    margin-bottom 100px

    &-container
      display flex
      flex-direction row
      justify-content space-between
      margin 0 auto 0 auto
      width 68.7%

    &-img
      display block
      margin -133px auto 0 auto
      width 93%

    &-title
      color $blackT3
      font-size 13px
      letter-spacing 0.7px
      margin-bottom 15px

    &-desc
      color $blackT3
      font-size 11px
      letter-spacing 0.7px
      line-height 20px
      margin-top 12px
      width 366px

    &-ul
      list-style none
      margin 0
      padding 0

      & > .templateb-data-desc
        margin-top 0

    &-btns
      display flex
      flex-direction row
      margin-top 5px

      & > a:first-child
        margin-right 15px

  /*VRE project*/

  &.vre
    .templateb-cover
      background-image url("/img/projects/vre-cover.jpg")

    .templateb-logo
      height 38px
      width 34px

@media screen and (min-width 1220px)
  .templateb
    &-data
      &-img
        height 707px
        width 1120px

      &-container
        width 830px

@media screen and (max-width 1010px)
  .templateb
    &-cover
      &-content
        width 74.7%

      &-title
        font-size 10px

      &-paragraph
        font-size 12px
        width 268px

    &-data
      &-img
        width 100%

      &-container
        flex-direction column
        width 75%

      &-desc
        width 100%

      &-btns
        margin-top 30px

@media screen and (max-width 420px)
  .templateb
    .return
      &-container
        padding-left 25px

    &-cover
      &-paragraph
        width 100%

    &-data
      margin-bottom 77px

      &-container
        margin-top 10px

      &-btns
        flex-direction column

        & > a:first-child
          margin-bottom 15px
