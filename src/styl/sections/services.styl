.service
  margin 55px 0 105px 0

  &-cover
    &-title
      color $blackT4
      font-size 13vw
      letter-spacing 1.1px
      line-height 150px
      margin 0 -25px -75px -25px
      opacity 0.03
      position relative
      text-align center
      text-indent 1.1px
      z-index -1

    &-content
      display flex
      flex-direction row
      justify-content flex-end

      &-info
        margin 76px 0 0 0

    &-logo
      &:first-child
        height 24px
        margin-right 16px

      &:last-child
        height 23px

      &-container
        margin-bottom 15px

    &-subtitle
      color $blackT2
      font-size 40px
      letter-spacing 0.1px
      line-height 42px

    &-desc
      color $blackT2
      display block
      font-size 15px
      letter-spacing 0.9px
      line-height 26px
      margin 16px 0 24px 0

    &-img
      height 382px
      width 501px

  &-packages
    padding-bottom 140px
    position relative

    &-title
      color $blackT2
      font-size 30px
      letter-spacing 0.2px
      line-height 42px
      text-align center

      &:before
        background-color $blueT1
        content ""
        display inline-block
        height 2px
        margin 0 13px 8px 0
        width 24px

    &-slice
      display none

  &-table
    margin 47px auto 0 auto
    position relative
    width 881px

    &-container
      position relative
      z-index 1

    &-thead
      display flex
      flex-direction row
      justify-content flex-end

    &-th
      align-items center
      display flex
      justify-content center
      width 193px

      &:nth-child(1)
        background-color #8dbaf0

      &:nth-child(2)
        background-color #5598e9

      &:nth-child(3)
        background-color #2c6ebe

      & span
        color $whiteT1
        font-size 16px

    &-tbody
      display flex
      flex-direction row

      &-first,
      &-second
        background-color $whiteT1

      &-first
        box-shadow 0 9px 18px 0 rgba(0, 0, 0, 0.16)
        width 330px

        & .service-table-td
          align-items center
          display flex
          padding-left 25px
          padding-right 25px

      &-second
        display flex
        flex-direction row
        box-shadow 0 9px 18px 0 rgba(0, 0, 0, 0.16)
        margin-left -30px
        width 581px

        .service-table-td
          align-items center
          display flex
          justify-content center
          width 193px

        & > div:nth-child(2)
          border-left solid 1px #ebeef1
          border-right solid 1px #ebeef1

    &-desc
      color #767676
      font-size 13px
      letter-spacing 0.1px
      line-height 20px

    &-th,
    &-td
      height 44px

    &-td
      border-bottom solid 1px #ebeef1

    &-check
      height 13px
      width 16px

    &-text
      color $blueT1
      font-size 16px

  &-card
    background-color $blueT1
    bottom 0
    display flex
    flex-direction column
    height 454px
    justify-content flex-end
    left 0
    padding-bottom 60px
    position absolute
    right 0

    &-content
      align-items center
      display flex
      flex-direction column

      & a.transparent
        background-color $blueT1
        justify-content center
        width 212px
        z-index 1

    &-title
      color $grayT1
      font-size 22vw
      letter-spacing 1.1px
      margin -140px 0 -80px 0
      opacity 0.08
      text-align center
      text-indent 1.1px

  &-projects
    margin 70px 0 0 0

    &-info
      margin 0 auto
      width 886px

    &-title
      color $blackT2
      font-size 30px
      letter-spacing 0.2px
      line-height 27px

      &:before
        background-color $blueT1
        content ""
        display inline-block
        height 2px
        margin 0 13px 8px 0
        width 24px

    &-img
      height 276px
      width 276px !important

      &-container
        display flex
        flex-direction row
        margin-top 60px

      &-carousel
        display none !important

      &-content
        height 276px
        position relative

        &:nth-child(2)
          margin 0 29px

    &-label
      bottom 12px
      color $whiteT1
      font-size 32px
      left 24px
      letter-spacing -0.4px
      position absolute

    &-banner
      position relative

    &-subtitle
      color $grayT1
      font-size 22vw
      letter-spacing 1.1px
      margin 0 -30px
      text-align center
      text-indent 1.1px

    &-btns
      display flex
      flex-direction row
      justify-content center
      left 0
      position absolute
      right 0
      top 45%

      & .borderBlack
        margin-right 23px

#webpages
  &-cover
    &-desc
      width 320px

#pointsale
  &-cover
    &-desc
      width 325px

    &-img
      box-shadow 0 19px 30px 0 rgba(0,0,0,0.26)
      height 382px
      width 612px

  &-packages
    margin-top 60px

@media screen and (min-width 1040px)
  .service
    &-cover
      &-title
        font-size 137px

      &-content
        &-info
          width calc(50% - 59px)

    &-card
      &-title
        font-size 231px

    &-projects
      &-subtitle
        font-size 231px

@media screen and (max-width 1000px)
  .service
    &-cover
      &-logo
        &:first-child
          height 20px

        &:last-child
          height 19px

      &-title
        line-height 160%
        margin-bottom -36px

      &-content
        align-items center
        flex-direction column

        &-info
          align-items center
          display flex
          flex-direction column
          margin 20px 30px 33px 30px

      &-subtitle
        text-align center

      &-desc
        margin-bottom 45px
        text-align center

      &-img
        height auto
        width 100%

    &-packages
      &-title
        font-size 24px
        text-align left
        margin-left 10%

      &-slice
        align-items center
        color $blackT2
        display flex
        font-size 10px
        letter-spacing 2.7px
        margin 24px 0 0 calc(10% - -39px)
        text-transform uppercase

        &-icon
          height 10.47px
          margin-left 30px
          width 40px

    &-table
      &-container
        overflow auto
        margin-left 0

    &-card
      height 382px
      padding-bottom 0

      &-content
        & a.transparent
          bottom 50px
          position absolute

      &-title
        margin 0

    &-projects
      margin-top 35px

      &-info
        width 276px

      &-title
        font-size 24px
        text-align center

        &:before
          margin-right 8px
          width 20px

      &-img
        &-container
          display none

        &-carousel
          display block !important
          margin-top 30px

          & .owl-prev,
          & .owl-next
            bottom 31px
            position absolute
            top 0

          & .owl-prev
            left -45px

          & .owl-next
            right -45px

          & .carousel-arrow
            height 30px
            width 30px

          & .owl-dots
            align-items center
            display flex
            justify-content center
            margin-top 22px

          & .owl-dot
            background-color #eaeaea !important
            border-radius 100px
            height 9px
            width 9px

            &:nth-child(2)
              margin 0 10px

          & .owl-dot.active
            background-color $whiteT1 !important
            border solid 1px #eaeaea !important

  #webpages
    &-cover
      &-desc
        width 270px

  #pointsale
    &-cover
      &-img
        height auto
        margin-bottom 40px
        width 85%

    &-packages
      margin-top 10px

@media screen and (max-width 419px)
  .service
    &-projects
      &-info
        width 220px

      &-img
        height 220px
        width 220px !important

        &-carousel
          & .owl-prev
            left -40px

          & .owl-next
            right -40px

      &-btns
        align-items center
        flex-direction column

        & .borderBlack
          justify-content center
          margin 0 0 15px 0
          width 198px

        & #same-btn-width
          width 176.64px

    &-packages
      &-slice
        width 190px

  #pointsale
    &-cover
      &-desc
        width 300px
